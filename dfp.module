/**
 * Implements hook_block_info().
 */
function dfp_block_info() {
  $tags = _dfp_block_tags();

  $blocks = array();
  foreach ($tags as $tag) {
    $blocks[$tag->machinename]['info'] = t('DFP tag: !tagname', array('!tagname' => $tag->name));
    $blocks[$tag->machinename]['cache'] = DRUPAL_CACHE_PER_PAGE;
  }
  return $blocks;
}

